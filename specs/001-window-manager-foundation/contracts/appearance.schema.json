{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Appearance Settings",
  "type": "object",
  "properties": {
    "zoom": { "type": "number", "minimum": 0.5, "maximum": 3.0, "default": 1.0 },
    "opacity": { "type": "number", "minimum": 0.5, "maximum": 1.0, "default": 1.0 },
    "transparent": { "type": "boolean", "default": false },
    "backgroundColor": { "type": "string", "format": "color", "default": "#000000" },
    "backgroundImage": { "type": "string", "format": "uri", "nullable": true },
    "blur": { "type": "number", "minimum": 0, "maximum": 40, "default": 0 }
  },
  "required": ["zoom", "opacity", "transparent"],
  "additionalProperties": true
}
